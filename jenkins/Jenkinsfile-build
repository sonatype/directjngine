library('private-pipeline-library')
library('jenkins-shared')

mavenSnapshotPipeline(usePublicSettingsXmlFile: true, integrationTests: true,
    //mavenOptions: '-Dlicense.skip=true -Dlicense.failIfMissing=false',
    onSuccess: { build, env ->
      notifyChat(env: env, currentBuild: build, room: 'nexus')
    },
    onFailure: { build, env ->
      notifyChat(env: env, currentBuild: build, room: 'nexus')
    }
)
