library('private-pipeline-library')
library('jenkins-shared@quick-sonar-fix')

mavenSnapshotPipeline(performSonarAnalysis: true,
    onSuccess: { build, env ->
      notifyChat(env: env, currentBuild: build, room: 'nexus')
    },
    onFailure: { build, env ->
      notifyChat(env: env, currentBuild: build, room: 'nexus')
    }
)
